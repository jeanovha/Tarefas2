<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlterarTarefaActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_alterar_descricao"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginTop="120dp"
        android:hint="Descrição"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/txt_alterar_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:text="Selecionar data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_alterar_descricao" />

    <TextView
        android:id="@+id/txt_alterar_hora"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="32dp"
        android:text="Selecionar hora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_alterar_descricao" />

    <Switch
        android:id="@+id/swt_realizado"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginBottom="8dp"
        android:text="Realizado"
        app:layout_constraintBottom_toTopOf="@+id/til_alterar_descricao"
        tools:layout_editor_absoluteX="245dp" />

    <Button
        android:id="@+id/btn_alterar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginLeft="134dp"
        android:layout_marginRight="162dp"
        android:layout_marginStart="134dp"
        android:text="Alterar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>